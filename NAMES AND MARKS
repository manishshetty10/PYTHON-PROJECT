import time
names=[]
marks=[]
for i in range(3):
    a= input("enter name :")
    names.append(a)
    student=[]
    for j in range(3):
        b=int(input("enter marks {}:".format(j+1)))
        student.append(b)
    marks.append(student)
    
per=[]
for i in marks:
    res=sum(i)//3
    per.append(res)

time.sleep(3)
print("---------")
for i in range(3):
    print("{} .{}: {}%".format(i+1,names(i),per(i)))
